{
  "type": "module",
  "name": "core",
  "private": true,
  "main": "src/index.js",
  "scripts": {
    "build": "tsup src/index.ts -d=dist --format=esm --platform=node --treeshake --sourcemap --dts --target esnext",
    "prepare": "prisma generate && pnpm run build",
    "dev": "tsup src/index.ts -d=dist --format=esm --platform=node --treeshake --sourcemap --dts --target esnext --watch"
  },
  "prisma": {
    "schema": "./prisma/"
  },
  "dependencies": {
    "@types/json-bigint": "^1.0.4",
    "checkeasy": "^1.2.1",
    "json-bigint": "^1.0.0",
    "yaml": "^2.5.1"
  },
  "peerDependencies": {
    "@discordjs/rest": "^2.4.2",
    "@prisma/client": "^6.13.0",
    "prisma": "^6.13.0",
    "@supabase/supabase-js": "^2.45.4",
    "@whop-sdk/core": "~0.0.4",
    "discord-api-types": "*",
    "discord.js": "*",
    "stripe": "^15.12.0",
    "tsup": "^8.2.4",
    "typescript": "*",
    "zod": "^3.25.34"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "unplugin-auto-import": "^0.18.5",
    "vitest": "^2.1.5"
  },
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/index.js"
  }
}
