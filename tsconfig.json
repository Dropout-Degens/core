{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "ESNext",
        "pretty": true,
        "moduleResolution": "Bundler",
        "removeComments": true,
        "strict": true,
        "target": "ESNext",

        "rootDir": "./src",

        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,

        "sourceMap": false,
        "declaration": false,
        "declarationMap": false,

        // Thank you, TypeScript, for hating the `long` module.
        "skipLibCheck": true,

        "types": [
            "node"
        ],

    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.d.ts",
    ]
}
